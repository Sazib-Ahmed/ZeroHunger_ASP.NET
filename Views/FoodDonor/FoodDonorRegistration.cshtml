
@{
    ViewBag.Title = "Registration";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-container">
                <div class="card-header">
                    <h4 class="text-center">Food Donor Registration</h4>
                    @if (TempData["Msg"] != null)
                    {
                        <p class="alert alert-info">@TempData["Msg"]</p>
                    }
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="foodDonorType">Type:</label>
                            <select class="form-control" id="foodDonorType"  name="type"  value="@(Model !=null ? Model.type : "")" required>
                                <option disabled selected value="Select">Select</option>
                                <option value="restaurant">Restaurant</option>
                                <option value="buffet">Buffet</option>
                                <option value="office">Office</option>
                                <option value="community centre">Community Centre</option>
                                <option value="home">Home</option>
                                <option value="party">Party</option>
                                <option value="other">Other</option>
                            </select>
                            <span class="text-danger">@Html.ValidationMessage("type")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorName">Name:</label>
                            <input type="text" class="form-control" id="foodDonorName" name="name" value="@(Model !=null ? Model.name : "")" maxlength="50" required placeholder="Enter Name">
                            <span class="text-danger">@Html.ValidationMessage("name")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorAddress">Address:</label>
                            <input type="text" class="form-control" id="foodDonorAddress" name="address" value="@(Model !=null ? Model.address : "")" maxlength="100" required placeholder="Enter Address">
                            <span class="text-danger">@Html.ValidationMessage("address")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorPhone">Phone:</label>
                            <input type="tel" class="form-control" id="foodDonorPhone" name="phone" value="@(Model !=null ? Model.phone : "")" required placeholder="Enter Phone Number">
                            <span class="text-danger">@Html.ValidationMessage("phone")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorEmail">Email:</label>
                            <input type="email" class="form-control" id="foodDonorEmail" name="email" value="@(Model !=null ? Model.email : "")"  maxlength="100" placeholder="Enter Email">
                            <span class="text-danger">@Html.ValidationMessage("email")</span>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" value="@(Model !=null ? Model.password : "")" placeholder="Enter Password" maxlength="20">
                            <span class="text-danger">@Html.ValidationMessage("password")</span>
                        </div>
                        <div class="text-center">
                            <p class="text-center mt-3 mb-0">
                                Already have an account?<a href="/FoodDonor/FoodDonorLogin" class="btn btn-link">Login</a>
                            </p>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>

                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>

