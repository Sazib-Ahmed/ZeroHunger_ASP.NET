
@{
    ViewBag.Title = "AssignEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    bool IsSelected(int empId)
    {
        if (ViewBag.SelectedEmployees != null)
        {
            var selectedEmployees = ViewBag.SelectedEmployees as List<int>;
            return selectedEmployees.Contains(empId);
        }
        return false;
    }

}


<form method="post">
    <h2>Assign Employees To Collect Request ID: @ViewBag.CollectRequestId </h2>
    <input type="hidden" name="collectRequestId" value="@ViewBag.CollectRequestId" />
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" checked="@IsSelected(emp.id)" name="selectedEmployees[]" value="@emp.id" />
                    </td>
                    <td>@emp.id</td>
                    <td>@emp.name</td>
                    <td>@emp.email</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Assign Employees</button>
</form>
