
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-container">
                <div class="card-header">
                    <h4 class="text-center">Admin Login</h4>
                    @if (TempData["Msg"] != null)
                    {
                        <p class="alert alert-info">@TempData["Msg"]</p>
                    }
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email"  value="@(Model !=null ? Model.email : "")" placeholder="Enter email" required>
                            <span class="text-danger">@Html.ValidationMessage("email")</span>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password"  value="@(Model !=null ? Model.password : "")" placeholder="Enter password" required>
                            <span class="text-danger">@Html.ValidationMessage("password")</span>
                        </div>
                        <div class="text-center">
                            <p class="text-center mt-3 mb-0">
                                Don't have an account?<a href="/FoodDonor/Registration" class="btn btn-link">Register</a>
                            </p>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <br>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>