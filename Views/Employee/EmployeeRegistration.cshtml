
@{
    ViewBag.Title = "Registration";
}
@{
    bool CheckGender(string gn)
    {
        if (Model != null && Model.gender != null
            && Model.gender.Equals(gn))
        {
            return true;
        }
        return false;
    }
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-container">
                <div class="card-header">
                    <h4 class="text-center">Employee Registration</h4>
                    @if (TempData["Msg"] != null)
                    {
                        <p class="alert alert-info">@TempData["Msg"]</p>
                    }
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="form-group">
                            <label for="foodDonorName">Name:</label>
                            <input type="text" class="form-control" id="foodDonorName" value="@(Model !=null ? Model.name : "")" name="name" maxlength="50" required placeholder="Enter Name">
                            <span class="text-danger">@Html.ValidationMessage("name")</span>
                        </div>
                        <div class="form-group">
                            Gender:	&nbsp;	&nbsp;
                            <input type="radio" checked="@CheckGender("Male")" name="gender" value="Male" />Male	&nbsp;	&nbsp;
                            <input type="radio" checked="@CheckGender("Female")" name="gender" value="Female" />Female	&nbsp;	&nbsp;
                            <input type="radio" checked="@CheckGender("Other")" name="gender" value="Other" />Other
                            <br />
                            <span class="text-danger">@Html.ValidationMessage("gender")</span>
                            <br />
                        </div>
                        <div class="form-group">
                            <label for="foodDonorPhone">Phone:</label>
                            <input type="tel" class="form-control" id="foodDonorPhone" value="@(Model !=null ? Model.phone : "")" name="phone" required placeholder="Enter Phone Number">
                            <span class="text-danger">@Html.ValidationMessage("phone")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorPhone">NID Number:</label>
                            <input type="tel" class="form-control" id="foodDonorPhone" value="@(Model !=null ? Model.nid : "")" name="nid" required placeholder="Enter NID Number">
                            <span class="text-danger">@Html.ValidationMessage("nid")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorEmail">Email:</label>
                            <input type="email" class="form-control" id="foodDonorEmail" value="@(Model !=null ? Model.email : "")" name="email" maxlength="100" required placeholder="Enter Email">
                            <span class="text-danger">@Html.ValidationMessage("email")</span>
                        </div>

                        <div class="form-group">
                            <label for="foodDonorAddress">Address:</label>
                            <input type="text" class="form-control" id="foodDonorAddress" value="@(Model !=null ? Model.address : "")" name="address" maxlength="100" required placeholder="Enter Address">
                             <span class="text-danger">@Html.ValidationMessage("address")</span>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" value="@(Model !=null ? Model.password : "")" name="password" placeholder="Enter Password" required maxlength="20">
                            <span class="text-danger">@Html.ValidationMessage("password")</span>
                        </div>
                        <div class="text-center">
                            <p class="text-center mt-3 mb-0">
                                Already have an account?<a href="/Employee/EmployeeIndex" class="btn btn-link">Login</a>
                            </p>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

