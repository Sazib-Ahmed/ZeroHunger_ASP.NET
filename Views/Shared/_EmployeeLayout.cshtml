<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <title>@ViewBag.Title - Zero Hunger</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Zero Hunger", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="btn btn-primary">@Html.ActionLink("Distribution List", "EmployeeFoodDistribution", "Employee", new { area = "" }, new { @class = "nav-link" })</li>&nbsp;&nbsp;
                    <li class="btn btn-primary">@Html.ActionLink("Collect Request", "EmployeeIndex", "Employee", new { area = "" }, new { @class = "nav-link" })</li>&nbsp;&nbsp;
                    <li class="btn btn-danger">@Html.ActionLink("Logout", "EmployeeLogout", "Employee", new { area = "" }, new { @class = "nav-link" })</li>&nbsp;&nbsp;
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="bg-dark text-white text-center py-3">
            <p>&copy; @DateTime.Now.Year -  Zero Hunger</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
